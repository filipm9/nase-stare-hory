# Database
# REQUIRED in production - app will fail to start without it
DATABASE_URL=postgresql://postgres:postgres@db:5432/watermeter

# JWT & Session
# REQUIRED in production - app will fail to start without it
# Generate strong secret: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
SESSION_NAME=app_session
COOKIE_SECURE=false  # Set to 'true' in production (HTTPS required)
COOKIE_SAMESITE=lax  # 'none' for cross-origin (frontend/backend on different domains)

# CORS
CORS_ORIGIN=http://localhost:5173

# Cron/Webhook Security
# Generate strong secret: openssl rand -hex 32
CRON_SECRET=your-cron-secret-for-scheduled-jobs

# VAS API (Vodárenská)
VAS_API_URL=https://crm.vodarenska.cz:65000
VAS_USERNAME=your-vas-username
VAS_PASSWORD=your-vas-password
VAS_CLIENT_ID=your-vas-client-id
VAS_CLIENT_SECRET=your-vas-client-secret

# Email (Resend)
RESEND_API_KEY=re_your_resend_api_key
ALERT_EMAIL=

# App
PORT=4000
NODE_ENV=development

# Frontend (for Vite)
VITE_API_BASE=http://localhost:4000
